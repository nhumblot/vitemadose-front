<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.vitemadose" version="0.1-alpha" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ViteMaDose</name>
    <description>
        Trouver un lieu de vaccination avec des doses de vaccin disponibles
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        CovidTracker
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="Hostname" value="vmd.local" />
    <preference name="Scheme" value="https" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="resources/res/icon/android/ldpi.png" density="ldpi" />
        <icon src="resources/res/icon/android/mdpi.png" density="mdpi" />
        <icon src="resources/res/icon/android/hdpi.png" density="hdpi" />
        <icon src="resources/res/icon/android/xhdpi.png" density="xhdpi" />
        <icon src="resources/res/icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="resources/res/icon/android/xxxhdpi.png" density="xxxhdpi" />

        <splash src="resources/res/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="resources/res/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="resources/res/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="resources/res/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="resources/res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="resources/res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
        <preference name="ScrollEnabled" value="true" />
        <preference name="StatusBarOverlaysWebView" value="false" />

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="resources/res/icon/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="resources/res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="resources/res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="resources/res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="resources/res/icon/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="resources/res/icon/ios/icon-small-40.png" width="40" height="40" />
        <icon src="resources/res/icon/ios/icon-small-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="resources/res/icon/ios/icon.png" width="57" height="57" />
        <icon src="resources/res/icon/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="resources/res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="resources/res/icon/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="resources/res/icon/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="resources/res/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="resources/res/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="resources/res/icon/ios/icon-small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="resources/res/icon/ios/icon-small-50.png" width="50" height="50" />
        <icon src="resources/res/icon/ios/icon-small-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="resources/res/icon/ios/icon-83.5@2x.png" width="167" height="167" />
        <!-- iTunes Marketing Image -->
        <icon src="resources/res/icon/ios/icon-1024.png" width="1024" height="1024" />

        <splash src="resources/res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="resources/res/screen/ios/Default@2x~ipad~comany.png" />
        <splash src="resources/res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="resources/res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="resources/res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="resources/res/screen/ios/Default@3x~iphone~comany.png" />
    </platform>
</widget>
